@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>API Testing Dashboard</PageTitle>

<h1>API Testing Dashboard</h1>

<p>A modern API testing tool built with ASP.NET Core and Blazor.</p>

<AuthorizeView>
    <Authorized>
        <div class="alert alert-success">
            <h4>Welcome back, @context.User.Identity?.Name!</h4>
            <p>You're successfully logged in. Ready to test some APIs?</p>
            
            <div class="mt-3">
                <a href="/collections" class="btn btn-primary">My Collections</a>
                <a href="/api/test/health" class="btn btn-outline-secondary ms-2" target="_blank">Test API Health</a>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-info">
            <h4>Get Started</h4>
            <p>Sign up or log in to start testing APIs with your team.</p>
            
            <div class="mt-3">
                <a href="/Account/Register" class="btn btn-primary">Sign Up</a>
                <a href="/Account/Login" class="btn btn-outline-primary ms-2">Log In</a>
                <a href="/api/test/health" class="btn btn-outline-secondary ms-2" target="_blank">Test API Health</a>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">🚀 Fast Testing</h5>
                <p class="card-text">Quickly test REST APIs with an intuitive interface.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">👥 Team Collaboration</h5>
                <p class="card-text">Share collections and work together in real-time.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">📊 Performance Monitoring</h5>
                <p class="card-text">Track response times and monitor API health.</p>
            </div>
        </div>
    </div>
</div>